<div class="card">
  <!-- Table Title -->
  <div class="table-title">
    <h2>Danh sách vai trò</h2>
  </div>

  <!-- Button Container -->
  <div class="button-container">
    <button id="delete-selected" class="danger" title="Delete Selected" disabled>
      <svg viewBox="0 0 448 512" width="16" title="trash-alt">
        <path d="M32 464a48 48 0 0 0 48 48h288a48 48 0 0 0 48-48V128H32zm272-256a16 16 0 0 1 32 0v224a16 16 0 0 1-32 0zm-96 0a16 16 0 0 1 32 0v224a16 16 0 0 1-32 0zm-96 0a16 16 0 0 1 32 0v224a16 16 0 0 1-32 0zM432 32H312l-9.4-18.7A24 24 0 0 0 281.1 0H166.8a23.72 23.72 0 0 0-21.4 13.3L136 32H16A16 16 0 0 0 0 48v32a16 16 0 0 0 16 16h416a16 16 0 0 0 16-16V48a16 16 0 0 0-16-16z"/>
      </svg>
    </button>
    <%= link_to new_role_path, class: "primary", title: "Add New Data" do %>
      <svg viewBox="0 0 512 512" width="16" title="plus-circle">
        <path d="M256 8C119 8 8 119 8 256s111 248 248 248 248-111 248-248S393 8 256 8zm144 276c0 6.6-5.4 12-12 12h-92v92c0 6.6-5.4 12-12 12h-56c-6.6 0-12-5.4-12-12v-92h-92c-6.6 0-12-5.4-12-12v-56c0-6.6 5.4-12 12-12h92v-92c0-6.6 5.4-12 12-12h56c6.6 0 12 5.4 12 12v92h92c6.6 0 12 5.4 12 12v56z"/>
      </svg>
    <% end %>
  </div>

  <!-- Table Concept Section -->
  <div class="table-concept">
    <table>
      <thead>
        <tr>
          <th></th>
          <th>STT</th>
          <th>Tên vai trò</th>
          <th>Mô tả</th>
          <th>Tác vụ</th>
        </tr>
      </thead>
      <tbody>
        <% @roles.each_with_index do |role, index| %>
          <tr>
            <td><input type="checkbox" class="role-checkbox" value="<%= role.id %>"></td>
            <td><%= index + 1 %></td>
            <td><%= role.name %></td>
            <td><%= role.description %></td>
            <td>
              <div> 
                <%= link_to "Sua", edit_role_path(role), class: "btn btn-outline-primary boder"  %>
                <div class="btn_act"> 
                  <%= button_to "Xoa", role, method: :delete, data: { confirm: 'Are you sure you want to delete this role?' }, class: "btn btn-outline-danger boder"  %>
                </div>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<style>
.btn_act{
  margin-top: 5px;
}
.card {
  background-color: #ffffff;
  width: 100%;
  max-width: 100%;
  max-height: 100%;
  display: flex;
  flex-direction: column;
  box-shadow: 0 15px 35px rgba(#000000, 0.5);
}


.table-title {
  color: #2f2f2f;
  padding: 15px;
  margin-top: 10px;
}
h2 {
  text-align: center;
  margin: 0;
  padding: 0;
  font-weight: bold;
}

.button-container {
  width: 100%;
  box-sizing: border-box;
  display: flex;
  justify-content: flex-end;
  margin-bottom: 15px;
  margin-left: 15px;
}

.button-container button {
  font-family: inherit;
  font-size: inherit;
  color: #ffffff;
  padding: 10px;
  border: 0;
  margin: 0;
  outline: 0;
  border-radius: 3px;
  transition: background-color 225ms ease-out;
}
.primary {
  background-color: #147eff;
  color: white;
  padding: 10px;
  border-radius: 5px;
  text-decoration: none; /* Đảm bảo không có gạch chân */
  display: inline-flex;
  align-items: center;
  justify-content: center;
  font-size: 14px;
  border: none;
}

.primary:hover {
  background-color: lighten(#147eff, 10%);
}

.primary svg {
  margin-right: 8px;
}
.danger {
  background-color: #d11800;
}

.table-concept {
  width: 100%;
  height: 100%;
  max-height: 100%;
  overflow: auto;
  box-sizing: border-box;
}
table {
  background-color: #ffffff;
  font-size: 16px;
  border-collapse: collapse;
  width: 100%;
}
tr {
  &:last-child {
    td {
      border-bottom: 0;
    }
  }
}
th,
td {
  text-align: left;
  padding: 10px;
  box-sizing: border-box;
}
th {
  color: #ffffff;
  font-weight: normal;
  background-color: #8f8f8f;
  border-bottom: solid 2px #d8d8d8;
  position: sticky;
  top: 0;
}
td {
  border: solid 1px #d8d8d8;
  border-left: 0;
  border-right: 0;
  white-space: nowrap;
}
tbody tr {
  transition: background-color 150ms ease-out;
  &:nth-child(2n) {
    background-color: darken($table-background-color, 8%);
  }
  &:hover {
    background-color: darken($table-background-color, 8%);
  }
}

th input[type="checkbox"],
td input[type="checkbox"] {
  margin: 0;
  padding: 0;
  cursor: pointer;
}


th, td {
  text-align: center;
}


tbody tr:hover {
  background-color: darken($table-background-color, 8%);
}


th {
  position: sticky;
  top: 0;
  z-index: 1;
}
/* Cột đầu tiên và cột STT không có margin */
th:first-child, td:first-child {
  margin: 0; /* Không có margin cho thẻ đầu tiên */
  padding-left: 0; /* Đảm bảo không có khoảng cách bên trái */
}

/* Đảm bảo các thẻ th và td của cột "STT" không có margin */
th:nth-child(2), td:nth-child(2) {
  margin: 0;
  padding-left: 0;
}
</style>
<script>
  // Chức năng chọn tất cả checkbox
  document.getElementById('select-all').addEventListener('change', function() {
    const checkboxes = document.querySelectorAll('.role-checkbox');
    checkboxes.forEach(checkbox => checkbox.checked = this.checked);
    toggleDeleteButton();
  });

  // Chức năng bật/tắt nút "Delete Selected" khi có checkbox được chọn
  document.querySelectorAll('.role-checkbox').forEach(checkbox => {
    checkbox.addEventListener('change', toggleDeleteButton);
  });

  function toggleDeleteButton() {
    const selectedRoles = document.querySelectorAll('.role-checkbox:checked');
    const deleteButton = document.getElementById('delete-selected');
    deleteButton.disabled = selectedRoles.length === 0;
  }

  // Xử lý sự kiện nhấn nút xóa các vai trò đã chọn
  document.getElementById('delete-selected').addEventListener('click', function() {
    const selectedRoles = document.querySelectorAll('.role-checkbox:checked');
    const roleIds = Array.from(selectedRoles).map(checkbox => checkbox.value);

    if (roleIds.length === 0) {
      alert('Vui lòng chọn vai trò để xóa!');
      return;
    }

    if (confirm('Bạn có chắc chắn muốn xóa các vai trò đã chọn?')) {
      // Gửi AJAX request để xóa các vai trò
      fetch('/roles/bulk_delete', {
        method: 'DELETE',
        headers: {
          'Content-Type': 'application/json',
          'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]').content
        },
        body: JSON.stringify({ role_ids: roleIds })
      })
      .then(response => response.json())
      .then(data => {
        if (data.success) {
          alert('Đã xóa các vai trò đã chọn!');
          location.reload(); // Tải lại trang để cập nhật danh sách vai trò
        } else {
          alert('Có lỗi xảy ra, vui lòng thử lại.');
        }
      })
      .catch(error => {
        alert('Có lỗi xảy ra, vui lòng thử lại.');
        console.error(error);
      });
    }
  });
</script>