<div class="container">
  <div class="card">
    <div class="card-image">
      <h2 class="card-heading">
        Tạo một vai trò mới<br>
        <small>Xác định vai trò trong hệ thống của bạn</small>
      </h2>
    </div>

    <%= form_with(model: @role) do |form| %>
      <form class="card-form">
        <div class="input">
          <%= form.text_field :name, class: 'input-field', required: true %>
          <label class="input-label">Role Name</label>
        </div>

        <div class="input">
          <%= form.text_field :description, class: 'input-field' %>
          <label class="input-label">Description</label>
        </div>

        <div class="action">
          <%= form.submit 'Create Role', class: 'action-button' %>
        </div>
      </form>
    <% end %>

    <div class="card-info">
      <%= link_to 'Back to roles', roles_path, class: "btn-sm btn-outline-primary"%>
    </div>
  </div>
</div>
<style>
img {
  max-width: 100%;
  display: block;
}

.card {
  margin: 2rem auto;
  display: flex;
  flex-direction: column;
  width: 100%;
  max-width: 425px;
  background-color: #FFF;
  border-radius: 10px;
  box-shadow: 0 10px 20px 0 rgba(#999, .25);
  padding: .75rem;
}

.card-image {
  border-radius: 8px;
  overflow: hidden;
  padding-bottom: 65%;
  background-image: url('https://tienganhxaydung.congtythietkexaydung.net/wp-content/uploads/2023/08/banh-rang-tieng-anh-la-gi.jpg');
  background-repeat: no-repeat;
  background-size: 150%;
  background-position: 0 5%;
  position: relative;
}

.card-heading {
  position: absolute;
  left: 10%;
  top: 15%;
  right: 10%;
  font-size: 2rem;
  font-weight: 700;
  color: black;
  line-height: 1.222;
}

.card-heading small{
  font-size: 1rem;
  color: #735400;
}

.card-form {
  padding: 2rem 1rem 0;
}

.input {
  display: flex;
  flex-direction: column-reverse;
  position: relative;
  padding-top: 1.5rem;
  margin-top: 1.5rem;
}

.input-label {
  color: #8597a3;
  position: absolute;
  top: 1.5rem;
  transition: .25s ease;
}

.input-field {
  border: 0;
  z-index: 1;
  background-color: transparent;
  border-bottom: 2px solid #eee;
  font: inherit;
  font-size: 1.125rem;
  padding: .25rem 0;
  width: 100%;
}

.input-field:focus, .input-field:valid {
  outline: 0;
}

.input-field:focus + .input-label, .input-field:valid + .input-label {
  transform: translateY(-1.5rem);
}

.action {
  margin-top: 2rem;
}

.action-button {
  font: inherit;
  font-size: 1.25rem;
  padding: 1rem;
  width: 100%;
  font-weight: 500;
  background-color: #6658d3;
  border-radius: 6px;
  color: #FFF;
  border: 0;
}

.card-info {
  padding: 1rem 1rem;
  text-align: center;
  font-size: .875rem;
  color: #8597a3;
}
</style>