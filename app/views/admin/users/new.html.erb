<div class="body-container">
  <h2 class="form-title">Đăng Ký Người Dùng Mới</h2>

  <%= form_for @user, url: admin_users_path, html: { class: 'registration-form' }  do |f| %>
    <div class="form-group">
      <%= f.label :last_name, "Họ" %>
      <%= f.text_field :last_name, autofocus: true, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :first_name, "Tên" %>
      <%= f.text_field :first_name, autofocus: true, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :phone, "Số điện thoại" %>
      <%= f.text_field :phone, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :address, "Địa chỉ" %>
      <%= f.text_field :address, class: "form-control" %>
    </div>

    <div class="form-group row">
      <div class="col">
        <%= f.label :gender, "Giới tính" %>
        <%= f.select :gender, 
            [['Nam', 'male'], ['Nữ', 'female'], ['Khác', 'other']], 
            { prompt: 'Chọn giới tính', selected: '' }, 
            class: "form-control" %>
      </div>

      <div class="col">
        <%= f.label :role_ids, "Chọn vai trò" %>
        <%= f.select :role_ids, 
            [['Quản trị viên', 1], ['Người dùng', 2], ['Người điều hành', 3]], 
            { include_blank: false, selected: 1, disabled: true }, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :email, "Email" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      <% if @user.errors[:email].any? %>
        <div class="error-message">
          <%= @user.errors[:email].join(", ") %>
        </div>
      <% end %>
    </div>

<div class="form-group">
  <%= f.label :password, "Mật khẩu <em class='password-info'>(Tối thiểu 6 ký tự)</em>".html_safe %>
  <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
  <% if @user.errors[:password].any? %>
    <div class="error-message">
      <%= @user.errors[:password].join(", ") %>
    </div>
  <% end %>
</div>

<div class="form-group">
  <%= f.label :password_confirmation, "Xác nhận mật khẩu" %>
  <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
  <% if @user.errors[:password_confirmation].any? %>
    <div class="error-message">
      <%= @user.errors[:password_confirmation].join(", ") %>
    </div>
  <% end %>
</div>

    <div class="form-group form-action">
      <%= f.submit "Đăng ký", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
<style>
  .password-info {
    font-size: 0.9rem;
    color: #777;
  }

  .body-container {
    font-family: Arial, sans-serif;
    background-color: #f4f7fa;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100%;
    padding: 15px;
  }

  .form-title {
    font-size: 2rem;
    margin-bottom: 20px;
    text-align: center;
    color: #333;
    margin-right: 50px;
  }

  .registration-form {
    width: 100%;
    max-width: 500px;
    background-color: white;
    padding: 20px;
    border-radius: 8px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  }
  .form-group {
    margin-bottom: 20px;
  }
  .form-group label {
    font-size: 1rem;
    color: #333;
    margin-bottom: 5px;
    display: block;
  }
  select#user_gender.form-control, select#user_role_ids.form-control  {
    height: 70%;
  }
  .form-control {
    width: 100%;
    padding: 10px;
    font-size: 1rem;
    border: 1px solid #ccc;
    border-radius: 5px;
    background-color: #f9f9f9;
  }
  .form-control:focus {
    border-color: #007bff;
    background-color: #fff;
    outline: none;
  }

  .btn {
    padding: 10px 20px;
    background-color: #007bff;
    color: white;
    border: none;
    border-radius: 5px;
    font-size: 1rem;
    cursor: pointer;
    width: 100%;
  }
  .btn:hover {
    background-color: #0056b3;
  }

  .btn:focus {
    outline: none;
  }
</style>