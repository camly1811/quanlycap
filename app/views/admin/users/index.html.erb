  font-family: inherit;
  font-size: inherit;
  color: #ffffff;
  padding: 10px;
  border: 0;
  margin: 0;
  outline: 0;
  border-radius: 3px;
  transition: background-color 225ms ease-out;
}

.primary {
  background-color: #147eff;
  color: white;
  padding: 10px;
  border-radius: 5px;
  text-decoration: none; /* Đảm bảo không có gạch chân */
  display: inline-flex;
  align-items: center;
  justify-content: center;
  font-size: 14px;
  border: none;
}

.primary:hover {
  background-color: lighten(#147eff, 10%);
}

.act_submit a{

}
.title_col a{
  color: black;
}
