                <li class = "titile_li"><%= link_to 'Bể Cáp', bes_path %></li>
                <li><%= link_to 'Quản lý Bể Cáp', bes_path %></li>
                <li><%= link_to 'Tuyến Cáp', tuyencaps_path %></li>
                <li><%= link_to 'Quản lý Tuyến Cáp', tuyencaps_path %></li>
              </ul>
            </li>

            <li class="nav-item dropdown">
              <%= link_to "#", class: "nav-link dropdown-toggle", "data-bs-toggle": "dropdown" do %>
                HỆ THỐNG
              <% end %>
