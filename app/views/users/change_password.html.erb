<!-- app/views/admin/users/change_password.html.erb -->
<div class="body_pass">
  <div class="center">
    <h1>Thay đổi mật khẩu</h1>

    <%= form_for(@user, url: user_update_password_path(current_user), method: :patch) do |f| %>
      
      <!-- Mật khẩu hiện tại -->
      <div class="inputbox">
        <%= f.label :current_password, "Mật khẩu hiện tại" %>
        <%= f.password_field :current_password, class: "form-control", required: true %>
        <% if @user.errors[:current_password].any? %>
          <div class="error-message">
            <%= @user.errors[:current_password].first %> <!-- Lỗi: Mật khẩu không chính xác -->
          </div>
        <% end %>
      </div>

      <!-- Mật khẩu mới -->
      <div class="inputbox">
        <%= f.label :password, "Mật khẩu mới" %>
        <em class="password-info">(Tối thiểu 6 ký tự)</em>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> ký tự tối thiểu)</em><br />
        <% end %>
        <%= f.password_field :password, class: "form-control", required: true %>
        <% if @user.errors[:password].any? %>
          <div class="error-message">
            <%= @user.errors[:password].first %> <!-- Hiển thị lỗi nếu có -->
          </div>
        <% end %>
      </div>

      <!-- Nhập lại mật khẩu mới -->
      <div class="inputbox">
        <%= f.label :password_confirmation, "Nhập lại mật khẩu mới" %>
        <%= f.password_field :password_confirmation, class: "form-control", required: true %>
        <% if @user.errors[:password_confirmation].any? %>
          <div class="error-message">
            <%= @user.errors[:password_confirmation].first %> <!-- Hiển thị lỗi nếu mật khẩu xác nhận không khớp -->
          </div>
        <% end %>
      </div>

      <!-- Nút submit -->
      <div class="">
        <%= f.submit "Thay đổi mật khẩu", class: "submit-btn" %>
      </div>

    <% end %>
  </div>
</div>
<style>
@import url("https://fonts.googleapis.com/css2?family=Sansita+Swashed:wght@600&display=swap");
.body_pass {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 95vh;
  background: linear-gradient(45deg, greenyellow, dodgerblue);
  font-family: "Sansita Swashed", cursive;
}

.center {
  position: relative;
  padding: 50px 50px;
  background: #fff;
  border-radius: 10px;
  width: 430px;
  box-shadow: 0 0 15px rgba(0, 0, 0, 0.2);
}

.center h1 {
  font-size: 2em;
  border-left: 5px solid dodgerblue;
  padding: 10px;
  color: #000;
  letter-spacing: 5px;
  margin-bottom: 60px;
  font-weight: bold;
  padding-left: 10px;
}

.center .inputbox {
  position: relative;
  width: 100%;
  margin-bottom: 40px;
}

.center .inputbox label {
  display: block;
  font-size: 1.1em;
  margin-bottom: 5px;
  color: #333;
}

.center .inputbox input {
  position: relative;
  width: 100%;
  height: 40px;
  padding: 10px;
  border: 2px solid #000;
  outline: none;
  background: none;
  font-size: 1.2em;
  border-radius: 10px;
}

.center .inputbox em {
  font-size: 0.8em;
  color: #777;
  margin-top: 5px;
}

.center .submit-btn {
  width: 100%;
  padding: 12px;
  background: dodgerblue;
  color: #fff;
  border: none;
  border-radius: 10px;
  cursor: pointer;
  font-size: 1.1em;
}

.center .submit-btn:hover {
  background: linear-gradient(45deg, greenyellow, dodgerblue);
}
</style>